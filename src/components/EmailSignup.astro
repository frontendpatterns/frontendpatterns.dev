<form
  action="https://buttondown.com/api/emails/embed-subscribe/frontendpatterns.dev"
  method="post"
  target="popupwindow"
  onsubmit="window.open('https://buttondown.com/frontendpatterns.dev', 'popupwindow')"
  class="embeddable-buttondown-form w-full rounded-2xl border border-slate-200 bg-white/80 p-6 shadow-lg shadow-slate-900/10 dark:border-slate-800 dark:bg-slate-900/70 dark:shadow-none space-y-4"
>
  <div class="space-y-3">
    <p class="text-sm text-slate-600 dark:text-slate-400">
      Join the newsletter for launch announcements, new pattern drops, and
      resources.
    </p>
  </div>

  <label for="bd-email" class="sr-only">Enter your email</label>
  <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
    <input
      type="email"
      name="email"
      id="bd-email"
      required
      placeholder="you@example.com"
      class="flex-1 rounded-full border border-slate-300 bg-white px-4 py-2.5 text-sm text-slate-900 shadow-sm transition focus:border-sky-400 focus:outline-none focus:ring-2 focus:ring-sky-200/70 dark:border-slate-700 dark:bg-slate-900/60 dark:text-slate-100 dark:placeholder:text-slate-400 dark:focus:border-sky-300 dark:focus:ring-sky-400/30 placeholder:text-slate-500"
    />
    <button
      type="submit"
      class="inline-flex items-center justify-center rounded-full bg-sky-600 px-5 py-2 text-sm font-semibold text-white shadow transition hover:bg-sky-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-500 dark:bg-sky-400 dark:text-slate-950 dark:hover:bg-sky-300"
    >
      Subscribe
    </button>
  </div>

  <p class="text-xs text-slate-500 dark:text-slate-500">
    No spam. Unsubscribe anytime.
  </p>
</form>
