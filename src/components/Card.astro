---
const { title, href } = Astro.props;
---

<a
  href={href}
  class="group rounded-2xl border border-slate-200 dark:border-slate-800 bg-slate-100/50 dark:bg-slate-900/50 p-5 shadow-lg shadow-sky-950/20 transition hover:scale-[1.02] hover:shadow-sky-950/30 grid row-span-3 grid-rows-[subgrid] gap-y-3 content-start"
>
  <h3 class="text-lg/5 font-semibold text-slate-900 dark:text-slate-100">
    {title}
  </h3>
  <p class="text-sm/5 text-slate-700 dark:text-slate-300">
    <slot />
  </p>
  <span class="self-end inline-flex items-center gap-2 text-sm font-medium text-sky-700 transition group-hover:translate-x-0.5 dark:text-sky-300">
    Explore
    <svg
      class="h-3.5 w-3.5"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      aria-hidden="true"
    >
      <path
        stroke="currentColor"
        stroke-width="1.7"
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M7 7h10m0 0v10m0-10L7 17"
      />
    </svg>
  </span>
</a>
