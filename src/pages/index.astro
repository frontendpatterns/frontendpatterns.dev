---
import BaseLayout from '../layouts/BaseLayout.astro';

const features = [
  {
    title: 'Batteries Included',
    description: 'Astro ships with file-based routing, Markdown/MDX support, and fast island architecture.',
  },
  {
    title: 'Utility-First Styling',
    description: 'Tailwind CSS keeps styling expressive and composable without leaving your markup.',
  },
  {
    title: 'Ship Performance',
    description: 'Astro renders most of your UI to static HTML by default, making performance easy.',
  },
];
---

<BaseLayout>
  <section class="grid gap-6 rounded-3xl border border-slate-800 bg-slate-900/50 p-8 backdrop-blur">
    <h2 class="text-2xl font-semibold tracking-tight text-slate-100 sm:text-3xl">
      Why this stack works
    </h2>
    <p class="text-slate-300">
      Start experimenting with component-driven UI using only the essentials. Add integrations, content
      collections, or frameworks as you grow.
    </p>
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      {features.map((feature) => (
        <article class="rounded-2xl border border-slate-800 bg-slate-900/40 p-5 shadow-lg shadow-sky-950/20">
          <h3 class="text-lg font-semibold text-slate-100">{feature.title}</h3>
          <p class="mt-2 text-sm text-slate-300">
            {feature.description}
          </p>
        </article>
      ))}
    </div>
    <div class="flex flex-wrap gap-3">
      <a
        class="inline-flex items-center justify-center rounded-full bg-sky-400 px-4 py-2 text-sm font-semibold text-slate-950 transition hover:bg-sky-300"
        href="https://docs.astro.build"
        target="_blank"
        rel="noreferrer"
      >
        Astro Docs
      </a>
      <a
        class="inline-flex items-center justify-center rounded-full border border-slate-700 px-4 py-2 text-sm font-semibold text-slate-200 transition hover:border-slate-500 hover:text-slate-100"
        href="https://tailwindcss.com/docs"
        target="_blank"
        rel="noreferrer"
      >
        Tailwind Docs
      </a>
    </div>
  </section>
</BaseLayout>
